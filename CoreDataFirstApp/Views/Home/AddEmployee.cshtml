@model CoreDataFirstApp.Models.EmpModel

@{
    ViewData["Title"] = "AddEmployee";
}

<h1>AddEmployee</h1>
<form role="form" asp-controller="Home" asp-action="AddEmployee" method="post" >

   <input asp-for="Sid" type="hidden" />

    <div class="form-group col-lg-5">
        <label>Sname</label>
        <input placeholder="Enter Name" class="form-control bg-primary" asp-for="Sname" type"text"/>
        <span asp-validation-for="Sname" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-5">
        <label>Smail</label>
        <input placeholder="Enter Smail" class="form-control bg-success" asp-for="Smail" type"text"/>
        <span asp-validation-for="Smail" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-5">
        <label>Smob</label>
        <input placeholder="Enter Smob" class="form-control bg-warning" asp-for="Smob" type"text"/>
        <span asp-validation-for="Smob" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-5">
        <label>City</label>
        <input placeholder="Enter City" class="form-control bg-info" asp-for="City" type"text"/>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <input class="btn btn-success" value="submit" type="submit" />
</form>

